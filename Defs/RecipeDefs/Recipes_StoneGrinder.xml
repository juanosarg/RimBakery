<Defs>

<RecipeDef>
	<defName>RBK_GrindWheat</defName>
	<label>grind wheat into flour</label>
	<description>Grind wheat into flour.</description>
	<jobString>Making flour.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<effectWorking>Cook</effectWorking>
	<workAmount>700</workAmount>
     <soundWorking>Recipe_CookMeal</soundWorking>
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>RBK_Raw_CommonWheat</li>
	       
	      </thingDefs>
	    </filter>
	    <count>10</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>RBK_Raw_CommonWheat</li>
	   
	  </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>

	</fixedIngredientFilter>
	<products>
	  <RBK_WheatFlour>4</RBK_WheatFlour>
	</products>
	<workSkill>Cooking</workSkill>
	<recipeUsers>
         <li>RBK_StoneGrinder</li>
          
     </recipeUsers>
</RecipeDef>


